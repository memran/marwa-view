{
  "name": "memran/marwa-view",
  "description": "A thin, developer-friendly PSR-compliant View Engine built on top of Twig with PSR-16 caching. Part of the MarwaPHP ecosystem.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "emran@example.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "twig/twig": "^3.21",
    "psr/simple-cache": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\View\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Marwa\\View\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "memran/php-testify": "^1.0",
    "symfony/var-dumper": "^7.0"
  },
  "scripts": {
    "test": "php vendor/bin/testify"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "twig",
    "view-engine",
    "psr-16",
    "template",
    "marwa",
    "php8",
    "dx",
    "cache"
  ],
  "support": {
    "issues": "https://github.com/memran/marwa-view/issues",
    "source": "https://github.com/memran/marwa-view"
  }
}
