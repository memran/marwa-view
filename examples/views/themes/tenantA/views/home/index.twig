{% extends "layout.twig" %}

{% block title %}Home Â· Tenant A{% endblock %}

{% block content %}
    <div class="space-y-6">
        <div class="flex items-center gap-3">
            <img src="{{ theme_asset('images/logo-tenantA.svg') }}"
                 alt="Tenant A Logo"
                 class="h-10 w-10 rounded-md ring-2 ring-green-600 bg-slate-800 p-1" />
            <h1 class="text-2xl font-bold text-slate-100">
                Tenant A Dashboard
            </h1>
        </div>

        <p class="text-slate-300 leading-relaxed">
            This tenant is using a custom color accent (green),
            custom logo, and custom homepage content.
            Layout is inherited from <code>dark</code> theme.
        </p>

        <div class="rounded-lg border border-slate-700 bg-slate-800 p-4 shadow-sm">
            <div class="text-sm text-slate-400">Debug info:</div>
            <div class="text-xs font-mono text-slate-200">
                Theme: {{ _theme_name }}<br/>
                Chain: {{ _theme_chain|join(' -> ') }}
            </div>
        </div>

        <div>
            <button class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Tenant A Primary Action
            </button>
        </div>
    </div>
{% endblock %}
